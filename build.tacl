?SECTION define_everything MACRO
== ------------------------------------------------------------------
== Comments go here
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

define_flags
define_texts
define_source
define_targets
define_dependencies
define_defines
define_assigns
define_params


?SECTION define_flags MACRO
== ------------------------------------------------------------------
== Reserved for future use
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

[#DEF :flags STRUCT
  BEGIN
    BOOL false VALUE 0;
    BOOL true  VALUE -1;
  END;
]


?SECTION define_texts MACRO
== ------------------------------------------------------------------
== Comments go here
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

[#DEF :tal_directives TEXT |BODY|OPTIMIZE 0] == Let OCAX optimize


?SECTION define_source MACRO
== ------------------------------------------------------------------
== Map each src subdirectory in the OSS repository to a Guardian
== intermediate subvolume to hold C-format source files (code 180),
== then to a Guardian subvolume of EDIT-format files (code 101).
== ------------------------------------------------------------------

[#DEF :gstalsrc STRUCT == colon isn't mandatory, but is good practice
  BEGIN
    SUBVOL sv180 VALUE $STAT.GS180TAL; == sv180 name is mandatory
    SUBVOL sv101 VALUE $STAT.GSTALSRC; == sv101 name is mandatory
  END;
]

[#DEF :gstacl STRUCT
  BEGIN
    SUBVOL sv180 VALUE $STAT.GS180TAC;
    SUBVOL sv101 VALUE $STAT.GSTACL;
  END;
]


?SECTION define_targets MACRO
== ------------------------------------------------------------------
== Comments go here
== ------------------------------------------------------------------

[#DEF :gs100obj_hello STRUCT
  BEGIN
    FNAME name   VALUE $STAT.GS100OBJ.HELLO;
    FNAME log    VALUE $S.#HELLO.TALOUT;
    FNAME secure VALUE NONE;
    STRUCT dependencies;
      BEGIN
        CHAR d01(0:30) VALUE "gstalsrc_hello";
        CHAR d02(0:30) VALUE "system_system_tal";
        CHAR d03(0:30) VALUE "system_system_extdecs1";
        CHAR d04(0:30) VALUE "system_zsysdefs_zsystal";
      END;
  END;
]


[#DEF :gs100exe_hello STRUCT
  BEGIN
    FNAME name   VALUE $STAT.GS100EXE.HELLO;
    FNAME log    VALUE $S.#HELLO.OCAXOUT;
    FNAME secure VALUE $DEV1.GS100EXE.HELLO;
    STRUCT dependencies;
      BEGIN
        CHAR d01(0:30) VALUE "gs100obj_hello";
        CHAR d02(0:30) VALUE "system_system_ocax";
      END;
  END;
]


?SECTION define_dependencies MACRO
== ------------------------------------------------------------------
== Compilers, linkers, libraries, etc
== ------------------------------------------------------------------

[#DEF :system_system_ctoedit STRUCT
  BEGIN
    FNAME f VALUE $SYSTEM.SYSTEM.CTOEDIT;
  END;
]

[#DEF :system_system_extdecs1 STRUCT
  BEGIN
    FNAME f VALUE $SYSTEM.SYSTEM.EXTDECS1;
  END;
]


[#DEF :system_system_ocax STRUCT
  BEGIN
    FNAME f VALUE $SYSTEM.SYSTEM.OCAX;
  END;
]

[#DEF :system_system_tal STRUCT
  BEGIN
    FNAME f VALUE $SYSTEM.SYSTEM.TAL;
  END;
]

[#DEF :system_zsysdefs_zsystal STRUCT
  BEGIN
    FNAME f VALUE $SYSTEM.ZSYSDEFS.ZSYSTAL;
  END;
]


?SECTION define_defines MACRO
== ------------------------------------------------------------------
== Comments go here
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

DELETE DEFINE =EXTDECS1
ADD DEFINE    =EXTDECS1, CLASS MAP, FILE [:system_system_extdecs1]
DELETE DEFINE =ZSYSTAL
ADD DEFINE    =ZSYSTAL, CLASS MAP, FILE [:system_zsysdefs_zsystal]


?SECTION define_assigns MACRO
== ------------------------------------------------------------------
== Reserved for future use
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

ASSIGN WHATEVS, [:gstalsrc_hello]


?SECTION define_params MACRO
== ------------------------------------------------------------------
== Reserved for future use
== AWK doesn't need to read this section.
== ------------------------------------------------------------------

PARAM SUMMAT [:flags:true]


?SECTION gs100obj_hello_recipe MACRO
== ------------------------------------------------------------------
== Comments go here
== ------------------------------------------------------------------

RUN [:system_system_tal]/IN [:gstalsrc_hello:name], &
  OUT [:gs100obj_hello:name], TERM $ZHOME/ &
  [gs100obj_hello:name]; [:tal_directives]


?SECTION gs100exe_hello_recipe MACRO
== ------------------------------------------------------------------
== Comments go here
== ------------------------------------------------------------------

RUN [:system_system_ocax]/OUT [:gs100exe_hello:log], &
  TERM $ZHOME/ [:gs100obj_hello:name] &
  output_file [:gs100exe_hello:name]


== ------------------------------------------------------------------
== EOF
== ------------------------------------------------------------------

